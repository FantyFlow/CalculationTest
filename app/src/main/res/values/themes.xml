<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculationTest" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.CalculationTest" parent="Base.Theme.CalculationTest">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">?attr/isLightTheme</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialAlertDialog</item>
    </style>

    <style name="Widget.Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/cardview_shadow_start_color</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.TextButton</item>
    </style>

    <style name="AlertDialog.Button.TextButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorOnContainer">@color/black</item>
    </style>
</resources>